#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int sumDigits(string line, int length){
  int digits=0;
  for(int i=0; i<length; i++)
  {
    if(isdigit(line.at(i)))
      digits = digits + static_cast<int>(line.at(i)-48);
  }
  return digits;
}

string sumChars(string line, int length){
  string chars;
  for(int i=0; i<length; i++)
  {
    if(isalpha(line.at(i)))
      chars = chars + line.at(i);
  }
  return chars;
}

int main(){

  string line = "5,3,B,1,8,c,5,E,6";
  int length = line.length();

  cout << "Sum of digits: " << sumDigits(line, length);
  cout << "\nSum of chars: " << sumChars(line, length);


  return 0;
}
